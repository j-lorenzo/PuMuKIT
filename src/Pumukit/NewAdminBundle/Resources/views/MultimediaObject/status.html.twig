{% if mm.getProperty('executing_jobs') or mm.getProperty('pending_jobs') %}

    {% set pending_jobs_title = "{0} |{1} 1 pending job.  |]1,Inf[ %count% pending jobs."|trans({'%count%':  mm.getProperty('pending_jobs')|length }) %}
    {% set executing_jobs_title = "{0} |{1} 1 executing job. |]1,Inf[ %count% executing jobs."|trans({'%count%':  mm.getProperty('executing_jobs')|length }) %}
    {% set title = (pending_jobs_title ~ executing_jobs_title|raw) | spaceless %}
    <i class="mdi-navigation-refresh pmk-job-animate table_mms_job_animate" data-toggle="tooltip" data-placement="right" title="{{ title }}"></i>
{% else %}
    {% if not is_naked() %}
        <i id="table_mms_status_{{ mm.id }}" class="{{ mm.status|status_icon }}" data-toggle="tooltip" data-placement="right" title="{{ mm|status_text }}"></i>
    {% endif %}
{% endif %}

{% if 'XMLHttpRequest' == app.request.headers.get('X-Requested-With') %}
    <script type="text/javascript">
        window.check_for_new_pics('{{ mm.id }}', {{ mm.getPics()|length }} );
    </script>
{% endif %}
