<td headers="th-icons">
    {% if mms.getCurrentPage() != 1 or not loop.first %}
        {% set first_element = '<a href="' ~ path('pumukitnewadmin_mms_down', {'id': mm.id}) ~ '"  title="' ~ "Move one position up"|trans ~ '" style="color:#00786d;">&#8593;</a>' %}
        {% set second_element = '<a href="' ~ path('pumukitnewadmin_mms_bottom', {'id': mm.id}) ~ '" title="' ~ "Move to the beginning of the list"|trans ~ '" ><i class="mdi-editor-vertical-align-top"></i></a>' %}
        {{ (first_element|raw ~ second_element|raw) | spaceless }}
    {% endif %}
</td>
<td headers="th-icons">
    {% if (mms.getCurrentPage() != mms.getNbPages()) or (loop.index + ((mms.getCurrentPage() - 1 ) * mms.getMaxPerPage()) != mms.getNbResults()) %}
        {% set first_element = '<a href="' ~ path('pumukitnewadmin_mms_up', {'id': mm.id}) ~ '"  title="' ~ "Move one position down"|trans ~ '" style="color:#00786d;">&#8595;</a>' %}
        {% set second_element = '<a href="' ~ path('pumukitnewadmin_mms_top', {'id': mm.id}) ~ '" title="' ~ "Move to the end of the list"|trans ~ '" ><i class="mdi-editor-vertical-align-bottom"></i></a>' %}
        {{ (first_element|raw ~ second_element|raw) | spaceless }}
    {% endif %}
</td>
