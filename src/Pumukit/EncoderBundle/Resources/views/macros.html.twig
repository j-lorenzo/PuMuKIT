{% macro job_status_color(status) %}
{% set colors = {
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_ERROR')): 'rgb(221, 75, 57)',
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_PAUSED')): 'rgb(178, 178, 178)',
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_WAITING')): 'rgb(75, 148, 192)',
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_EXECUTING')): 'rgb(243, 156, 18)',
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_FINISHED')): 'rgb(0, 166, 90)',
}
%}
{{ colors[status] | spaceless }}
{% endmacro %}

{% macro job_status_icon(status) %}
{% set icons = {
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_ERROR')): 'mdi-av-new-releases',
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_PAUSED')): 'mdi-av-pause-circle-fill',
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_WAITING')): 'mdi-av-loop',
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_EXECUTING')): 'mdi-av-equalizer',
  (constant('Pumukit\\EncoderBundle\\Document\\Job::STATUS_FINISHED')): 'mdi-av-play-circle-fill',
}
%}
{{ icons[status] | spaceless }}
{% endmacro %}
